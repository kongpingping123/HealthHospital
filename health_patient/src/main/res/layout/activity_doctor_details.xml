<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".activity.DoctorDetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_icon_back_black_n"
            android:layout_marginLeft="@dimen/dp_25"
            android:id="@+id/jian"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/login_iv"
            android:text="医生详情"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/doctor_sim"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="@dimen/dp_128"
                    android:layout_height="@dimen/dp_160"/>
                <TextView
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14"
                    android:id="@+id/details_name"
                    android:layout_marginTop="@dimen/dp_21"
                    android:layout_marginLeft="@dimen/dp_158"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="曾小贤"
                    />
                <TextView
                    android:id="@+id/doctor_yishi"
                    android:textSize="@dimen/sp_10"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_above="@id/doctor_yuan"
                    android:text="副主任医师"
                    android:layout_toRightOf="@id/details_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:background="@drawable/common_icon_attention_large_n"/>
                <TextView
                    android:id="@+id/doctor_yuan"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:text="广东省妇幼保健医院"
                    android:layout_marginLeft="@dimen/dp_158"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@id/details_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/doctor_lv"
                    android:layout_marginLeft="@dimen/dp_158"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@id/doctor_yuan"
                    android:text="好评率 98%"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/doctor_shu"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@id/doctor_yuan"
                    android:layout_toRightOf="@+id/doctor_lv"
                    android:text="服务患者数 356 "
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <View
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/doctor_view"
                    android:layout_marginLeft="@dimen/dp_158"
                    android:layout_below="@+id/doctor_lv"
                    android:background="#3087ea"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_14"/>
                <TextView
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/doctor_lv"
                    android:layout_toRightOf="@+id/doctor_view"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="他收到的礼物"/>
                <ImageView
                    android:id="@+id/doctor_flower"
                    android:layout_marginLeft="@dimen/dp_156"
                    android:background="@drawable/gift_flower"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:layout_below="@+id/doctor_view"
                    android:layout_marginTop="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/hua"
                    android:layout_marginLeft="@dimen/dp_156"
                    android:layout_below="@+id/doctor_flower"
                    android:text="12"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/doctor_flowe"
                    android:layout_marginLeft="@dimen/dp_220"
                    android:background="@drawable/gift_certificate"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:layout_below="@+id/doctor_view"
                    android:layout_marginTop="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/shuben"
                    android:layout_marginLeft="@dimen/dp_220"
                    android:layout_below="@+id/doctor_flower"
                    android:text="12"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <ImageView
                    android:id="@+id/doctor_flow"
                    android:layout_marginLeft="@dimen/dp_284"
                    android:background="@drawable/gift_cup"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:layout_below="@+id/doctor_view"
                    android:layout_marginTop="@dimen/dp_10"
                    />
                <TextView
                    android:id="@+id/jiangbei"
                    android:layout_marginLeft="@dimen/dp_284"
                    android:layout_below="@+id/doctor_flow"
                    android:text="12"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#333333"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_marginTop="@dimen/dp_3"
                    android:id="@+id/doctor_v"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="#3087ea"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_14"/>
                <TextView
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_toRightOf="@+id/doctor_v"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人简历"/>
                <TextView
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_10"
                    android:id="@+id/jianli"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_v"
                    android:text="sdasdasd"/>
                <View
                    android:id="@+id/doctor_vt"
                    android:layout_marginTop="@dimen/dp_23"
                    android:layout_below="@+id/jianli"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="#3087ea"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_14"/>
                <TextView
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_below="@+id/jianli"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_toRightOf="@+id/doctor_vt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="擅长领域"/>
                <TextView
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_10"
                    android:id="@+id/jianl"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_vt"
                    android:text="sdasdasd"/>
                <View
                    android:id="@+id/doctor_vtt"
                    android:layout_marginTop="@dimen/dp_23"
                    android:layout_below="@+id/jianl"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:background="#3087ea"
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_14"/>
                <TextView
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_below="@+id/jianl"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:layout_toRightOf="@+id/doctor_vt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户评论"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_doctor"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctor_vtt"/>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/sp_12"
                android:textColor="#3087ea"
                android:gravity="center"
                android:text="点击查看更多评论"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal">
       <TextView
           android:id="@+id/hbi"
           android:gravity="center"
           android:textColor="#333333"
           android:textSize="@dimen/sp_16"
           android:text="500H币/次"
           android:layout_weight="7"
           android:layout_width="0dp"
           android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tiaozhuan"
            android:background="#3087ea"
            android:text="立即咨询"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</RelativeLayout>