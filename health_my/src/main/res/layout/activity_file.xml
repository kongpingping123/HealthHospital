<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_icon_back_black_n"
            android:layout_marginLeft="@dimen/dp_25"
            android:id="@+id/jian"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/login_iv"
            android:text="我的档案"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"
        android:background="#B9B4B4"
        android:layout_marginTop="@dimen/dp_40"
        />
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/re_add"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/no_message"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
       <TextView
           android:layout_width="@dimen/dp_300"
           android:layout_height="@dimen/dp_35"
           android:background="@drawable/translucent1"
           android:text="添加"
           android:id="@+id/text_add"
           android:textSize="18sp"
           android:gravity="center"
           android:layout_centerHorizontal="true"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="@dimen/dp_60"
           />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_50"
        android:id="@+id/re_bing"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/zhezhuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:text="[主要症状]"
            android:textColor="#03A9F4"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/ed_symptom"
            android:layout_width="@dimen/dp_320"
            android:layout_height="wrap_content"
            android:layout_below="@id/zhezhuang"
            android:layout_centerHorizontal="true"
            android:hint="请输入您的主要症状"
            android:text="" />

        <TextView
            android:id="@+id/bingshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_symptom"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_18"
            android:text="[现病史]"
            android:textColor="#03A9F4"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/ed_symptoms"
            android:layout_width="@dimen/dp_320"
            android:layout_height="wrap_content"
            android:layout_below="@id/bingshi"
            android:layout_centerHorizontal="true"
            android:hint="请详细输入您的当前病状"
            android:text="" />

        <TextView
            android:id="@+id/jwbingshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_symptoms"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_18"
            android:text="[即往病史]"
            android:textColor="#03A9F4"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/ed_symptomss"
            android:layout_width="@dimen/dp_320"
            android:layout_height="wrap_content"
            android:layout_below="@id/jwbingshi"
            android:layout_centerHorizontal="true"
            android:hint="请输入您的当前即往病史"
            android:text="" />

        <TextView
            android:id="@+id/experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_symptomss"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_18"
            android:text="[最近一次治疗经历]"
            android:textColor="#03A9F4"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/ed_symptomsss"
            android:layout_width="@dimen/dp_320"
            android:layout_height="wrap_content"
            android:layout_below="@id/experience"
            android:layout_centerHorizontal="true"
            android:hint="请输入医院名称"
            android:text="" />

        <TextView
            android:id="@+id/times"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_36"
            android:layout_below="@id/ed_symptomsss"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center_vertical"
            android:text="请选择治疗开始的时间"
            android:textColor="#1A1B1B"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_time"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_36"
            android:layout_below="@id/ed_symptomsss"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_toRightOf="@id/times" />

        <ImageView
            android:id="@+id/image_time"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@id/ed_symptomsss"
            android:layout_marginLeft="156dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/times"
            android:src="@drawable/circle_icon_drop_down_n" />

        <TextView
            android:id="@+id/timess"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_36"
            android:layout_below="@id/times"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_18"
            android:gravity="center_vertical"
            android:text="请选择治疗结束的时间"
            android:textColor="#1A1B1B"
            android:textSize="12sp" />

        <TextView
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_36"
            android:layout_below="@id/text_time"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_toRightOf="@id/timess" />

        <ImageView
            android:id="@+id/image_times"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@id/ed_symptomsss"
            android:layout_marginLeft="156dp"
            android:layout_marginTop="@dimen/dp_80"
            android:layout_toRightOf="@id/times"
            android:src="@drawable/circle_icon_drop_down_n" />

        <View
            android:layout_width="@dimen/dp_320"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/image_times"
            android:background="#747272"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:layout_width="@dimen/dp_330"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_times"
            android:layout_centerHorizontal="true"
            android:hint="请输入治疗过程"
            android:text=""
            android:id="@+id/text_treatment"
            android:layout_marginTop="@dimen/dp_25"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_treatment"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_18"
            android:text="[相关图片]"
            android:id="@+id/imager"
            android:textColor="#03A9F4"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:background="#B9B4B4"
            android:layout_height="@dimen/dp_36"
            android:layout_below="@id/imager"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/imagers"
            android:gravity="center_vertical"
            android:text="最多可添加6张图片;长按为图片排序"
            android:textColor="#1A1B1B"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@drawable/add"
            android:layout_below="@id/imagers"
            />
    </RelativeLayout>
</RelativeLayout>