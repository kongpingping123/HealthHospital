<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CollectionActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/common_icon_back_black_n"
            android:layout_marginLeft="@dimen/dp_25"
            android:id="@+id/jian"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/login_iv"
            android:text="我的收藏"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"
        android:background="#B9B4B4"
        android:layout_marginTop="@dimen/dp_40"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_49"

        >
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal"
            android:id="@+id/rg"
            >
            <RadioButton
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="健康资讯"
                android:gravity="center"
                android:id="@+id/coll_zx"
                android:textColor="#642EC4"
                />
            <RadioButton
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="健康视频"
                android:id="@+id/coll_sp"
                android:gravity="center"
                />
            <RadioButton
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:text="病友圈"
                android:id="@+id/coll_by"
                android:gravity="center"
                />
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_84"
        android:background="#999999"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment"
        android:layout_marginTop="@dimen/dp_90"
        ></FrameLayout>
</RelativeLayout>