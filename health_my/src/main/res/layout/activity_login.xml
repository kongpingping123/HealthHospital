<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:background="@drawable/login_bg"
    >
    <ImageView
        android:layout_width="@dimen/dp_67"
        android:layout_height="@dimen/dp_64"
        android:layout_marginTop="@dimen/dp_46"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logowhere"
        android:id="@+id/login_iv"
        />

    <LinearLayout
        android:layout_width="@dimen/dp_300"
        android:layout_marginTop="@dimen/dp_52"
        android:orientation="vertical"
        android:layout_below="@id/login_iv"
        android:layout_centerHorizontal="true"
        android:layout_height="@dimen/dp_218"
        android:background="@drawable/translucent"
        android:id="@+id/lv"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:gravity="center_vertical"
            android:focusable="true"
            android:layout_marginTop="@dimen/dp_30"
            android:focusableInTouchMode="true"
            >

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/login_icon_mail_n"
                />
            <EditText
                android:id="@+id/ed_email"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="18sp"
                android:text=""
                android:layout_marginLeft="20dp"
                android:textColor="#777575"
                android:hint="请输入邮箱"
                android:textColorHint="#777575"
                android:background="@android:color/transparent"
                />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_250"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="10dp"
            android:background="#777575" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:gravity="center_vertical"
            android:focusable="true"
            android:layout_marginTop="@dimen/dp_10"
            android:focusableInTouchMode="true"
            >

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/login_icon_lock_n"
                />
            <EditText
                android:id="@+id/ed_pwd"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:text=""
                android:layout_marginLeft="20dp"
                android:textColor="#777575"
                android:hint="请输入密码"
                android:textColorHint="#777575"
                android:background="@android:color/transparent"
                />
            <ImageView
                android:layout_width="22dp"
                android:layout_height="match_parent"
                android:src="@drawable/login_icon_hide_password_n"
                />
        </LinearLayout>
        <View
            android:layout_width="@dimen/dp_250"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="10dp"
            android:background="#777575" />

        <Button
            android:layout_width="@dimen/dp_240"
            android:layout_height="wrap_content"
            android:background="#722A8B"
            android:text="登录"
            android:textColor="#fff"
            android:id="@+id/tv_login"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textColor="#fff"
        android:layout_below="@id/lv"
        android:id="@+id/wjpwd"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_50"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无账号?立即注册"
        android:textColor="#fff"
        android:id="@+id/zhuce"
        android:layout_below="@id/lv"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_50"
        />

    <View
        android:layout_width="@dimen/dp_100"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="10dp"
        android:background="#FAF8F8"
        android:id="@+id/view"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_80"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他登录方式"
        android:layout_toRightOf="@id/view"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_75"
        android:layout_centerHorizontal="true"
        />
    <View
        android:layout_width="@dimen/dp_100"
        android:layout_height="1dp"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_80"
        android:background="#FAF9F9"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:src="@drawable/login_icon_weixin_white_n"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:id="@+id/image_weixin"
        />
</RelativeLayout>