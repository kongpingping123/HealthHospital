<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PatientActivity">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:background="@drawable/user_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_230"/>
    <com.facebook.drawee.view.SimpleDraweeView
        app:roundAsCircle="true"
        android:id="@+id/patient_img"
        android:background="@drawable/boy"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_205"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"/>
    <TextView
        android:id="@+id/patient_name"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        android:text="小悦悦"
        android:layout_marginLeft="@dimen/dp_76"
        android:layout_marginTop="@dimen/dp_230"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="@dimen/dp_278"
        android:background="#CFCFCF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"/>
    <TextView
        android:layout_marginLeft="@dimen/dp_26"
        android:gravity="center_vertical"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/dp_284"
        android:textSize="@dimen/sp_14"
        android:text="他发布的病友圈"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_34"/>
    <View
        android:layout_marginTop="@dimen/dp_316"
        android:background="#CFCFCF"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_6"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/patient_rv"
        android:layout_marginTop="@dimen/dp_322"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>