<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



       <androidx.core.widget.NestedScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >

              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:orientation="vertical">

                            <com.zhouwei.mzbanner.MZBannerView
                                android:id="@+id/show_banner"
                                android:layout_width="match_parent"
                                android:padding="@dimen/dp_20"
                                android:layout_height="@dimen/dp_200"
                                ></com.zhouwei.mzbanner.MZBannerView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:orientation="horizontal">

                                   <ImageView
                                       android:layout_width="@dimen/dp_3"
                                       android:layout_height="18dp"
                                       android:layout_gravity="center_vertical"
                                       android:layout_marginLeft="@dimen/dp_12"
                                       android:background="#3087ea" />

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center_vertical"
                                       android:layout_marginLeft="@dimen/dp_10"
                                       android:text="知识宝典"

                                       android:textColor="#3087ea"
                                       android:textSize="16sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_2"
                                android:background="#F2F2F2" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_209">

                                   <RelativeLayout
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content">

                                          <TextView
                                              android:layout_width="wrap_content"
                                              android:layout_height="wrap_content"
                                              android:layout_marginLeft="@dimen/dp_10"
                                              android:layout_marginTop="@dimen/dp_10"
                                              android:text="常见病症"
                                              android:textSize="@dimen/sp_14"
                                              android:textStyle="bold" />

                                          <ImageView
                                              android:id="@+id/show_disease"
                                              android:layout_width="@dimen/dp_157"
                                              android:layout_height="@dimen/dp_157"
                                              android:layout_marginLeft="@dimen/dp_10"
                                              android:layout_marginTop="@dimen/dp_38"
                                              android:background="@drawable/common_disease" />
                                   </RelativeLayout>

                                   <View
                                       android:layout_width="@dimen/dp_6"
                                       android:layout_height="wrap_content"
                                       android:layout_marginLeft="@dimen/dp_177"
                                       android:background="#F2F2F2" />

                                   <RelativeLayout
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       >

                                          <TextView
                                              android:layout_width="wrap_content"
                                              android:layout_height="wrap_content"
                                              android:layout_alignParentEnd="true"
                                              android:layout_marginTop="@dimen/dp_10"
                                              android:layout_marginEnd="@dimen/dp_109"
                                              android:text="常用药品"
                                               android:id="@+id/changyoubingqing"
                                              android:textSize="@dimen/sp_14"
                                              android:textStyle="bold" />

                                          <ImageView
                                              android:id="@+id/show_drugs"
                                              android:layout_width="@dimen/dp_157"
                                              android:layout_height="@dimen/dp_157"

                                              android:layout_alignParentRight="true"
                                              android:layout_marginTop="@dimen/dp_38"
                                              android:layout_marginRight="@dimen/dp_10"
                                              android:background="@drawable/common_drugs" />
                                   </RelativeLayout>

                                   <View
                                       android:layout_width="match_parent"
                                       android:layout_height="@dimen/dp_4"
                                       android:layout_marginTop="@dimen/dp_205"
                                       android:background="#F2F2F2" />
                            </RelativeLayout>

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:orientation="horizontal">

                                   <ImageView
                                       android:layout_width="@dimen/dp_3"
                                       android:layout_height="@dimen/dp_18"
                                       android:layout_gravity="center_vertical"
                                       android:layout_marginLeft="@dimen/dp_12"
                                       android:background="#3087ea" />

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center_vertical"
                                       android:layout_marginLeft="10dp"
                                       android:text="问诊咨询"
                                       android:textColor="#3087ea"
                                       android:textSize="16sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_2"
                                android:background="#F2F2F2" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                   <LinearLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:orientation="horizontal">

                                          <RelativeLayout
                                              android:layout_width="wrap_content"
                                              android:layout_height="wrap_content"
                                              android:layout_marginTop="@dimen/dp_12"
                                              android:layout_weight="1">

                                                 <androidx.recyclerview.widget.RecyclerView
                                                     android:id="@+id/rv_cinema"
                                                     android:layout_width="match_parent"
                                                     android:layout_height="match_parent" />
                                          </RelativeLayout>
                                   </LinearLayout>

                                   <View
                                       android:layout_marginTop="@dimen/dp_10"
                                       android:layout_width="match_parent"
                                       android:layout_height="@dimen/dp_4"
                                       android:background="#F2F2F2" />
                            </LinearLayout>

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:orientation="horizontal">

                                   <ImageView
                                       android:layout_width="@dimen/dp_3"
                                       android:layout_height="@dimen/dp_18"
                                       android:layout_gravity="center_vertical"
                                       android:layout_marginLeft="@dimen/dp_12"
                                       android:background="#3087ea" />

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center_vertical"
                                       android:layout_marginLeft="@dimen/dp_10"
                                       android:text="健康测评"
                                       android:textColor="#3087ea"
                                       android:textSize="@dimen/sp_16" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_2"
                                android:background="#F2F2F2" />

                            <ImageView
                                android:id="@+id/show_image"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_160"
                                android:background="@drawable/health_assessment" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_4"
                                android:background="#F2F2F2" />

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:orientation="horizontal">

                                   <ImageView
                                       android:layout_width="@dimen/dp_3"
                                       android:layout_height="@dimen/dp_18"
                                       android:layout_gravity="center_vertical"
                                       android:layout_marginLeft="@dimen/dp_12"
                                       android:background="#3087ea" />

                                   <TextView
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_gravity="center_vertical"
                                       android:layout_marginLeft="@dimen/dp_10"
                                       android:text="健康咨询"
                                       android:textColor="#3087ea"
                                       android:textSize="@dimen/sp_16" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_2"
                                android:background="#F2F2F2" />


                                 <androidx.recyclerview.widget.RecyclerView
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:id="@+id/recy_view"
                                     ></androidx.recyclerview.widget.RecyclerView>
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/recy_view1"
                                ></androidx.recyclerview.widget.RecyclerView>
                     </LinearLayout>


              </RelativeLayout>
       </androidx.core.widget.NestedScrollView>
       <RelativeLayout
           android:background="#F5F2F2"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_50">
              <ImageView
                  android:layout_width="@dimen/dp_32"
                  android:layout_height="@dimen/dp_32"
                  android:layout_marginLeft="@dimen/dp_12"
                  android:layout_centerVertical="true"
                  android:background="@drawable/wallet_icon_clock_n"
                  />
              <EditText
                  android:id="@+id/sousuo"
                  android:layout_marginLeft="@dimen/dp_80"
                  android:layout_centerVertical="true"
                  android:textColor="#999999"
                  android:textSize="@dimen/sp_12"
                  android:hint="请输入病症名称或标题关键字"
                  android:background="@drawable/textview_style"
                  android:layout_width="@dimen/dp_210"
                  android:layout_height="@dimen/dp_27"/>
              <ImageView
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="@dimen/dp_15"
                  android:layout_centerVertical="true"
                  android:background="@drawable/common_nav_message_black_n"
                  android:layout_width="@dimen/dp_24"
                  android:layout_height="@dimen/dp_24"/>

       </RelativeLayout>



</RelativeLayout>
