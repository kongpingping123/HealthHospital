<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.CommonActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_32"
            android:layout_centerVertical="true"
            android:background="@drawable/wallet_icon_clock_n"
            />
        <ImageView
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_12"

            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_320"
            android:src="@drawable/common_nav_message_white_n"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_6"
        android:background="#A09797"
        />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/dp_24"
           android:layout_marginTop="@dimen/dp_6"
           android:background="#E91E63"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本模块知识仅供参考，如有需要，请在医生指导下使用"
                android:textSize="@dimen/sp_10"

                 android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_65"
                android:textColor="#fff"
                />
       </LinearLayout>
       <androidx.core.widget.NestedScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_10"
                   android:text=""
                   android:textSize="@dimen/sp_16"
                   android:id="@+id/text_name"
                   android:layout_marginLeft="@dimen/dp_20"

                   />


               <TextView
                   android:layout_marginTop="@dimen/dp_20"
                   android:textSize="@dimen/sp_16"
                   android:layout_marginLeft="@dimen/dp_20"

                   android:text="[病理]"
                   android:textColor="#2196F3"

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />


               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_10"
                   android:text="_____"
                   android:textSize="@dimen/sp_16"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:id="@+id/a1"
                   />



               <TextView
                   android:layout_marginTop="@dimen/dp_20"
                   android:textSize="@dimen/sp_16"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:text="[症状]"
                   android:textColor="#2196F3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:layout_marginTop="@dimen/dp_10"
                   android:textSize="@dimen/sp_16"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:id="@+id/a2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />



               <TextView
                   android:layout_marginTop="@dimen/dp_20"
                   android:textSize="@dimen/sp_16"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:text="[宜与忌]"
                   android:textColor="#2196F3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:layout_marginTop="@dimen/dp_10"
                   android:textSize="@dimen/sp_16"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:id="@+id/a3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:layout_marginTop="@dimen/dp_20"
                   android:textSize="@dimen/sp_16"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:text="[中药治疗]"
                   android:textColor="#2196F3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:layout_marginTop="@dimen/dp_10"
                   android:textSize="@dimen/sp_16"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:id="@+id/a4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_marginTop="@dimen/dp_20"
                   android:textSize="@dimen/sp_16"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:text="[西药治疗]"
                   android:textColor="#2196F3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:layout_marginTop="@dimen/dp_10"
                   android:textSize="@dimen/sp_16"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:id="@+id/a5"

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
             <!--  <TextView
                   android:layout_marginTop="@dimen/dp_10"
                   android:textSize="@dimen/sp_16"
                   android:layout_marginLeft="@dimen/dp_20"
                   android:id="@+id/a5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />-->
           </LinearLayout>
       </androidx.core.widget.NestedScrollView>
</LinearLayout>