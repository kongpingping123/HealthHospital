<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#CFCFCF"
    tools:context=".activity.SearchActivity">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/back"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:background="@drawable/common_icon_back_black_n"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"/>
        <View
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_12"
            android:background="@drawable/textview_style"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_27"/>
        <EditText
            android:id="@+id/tv_shou"
            android:layout_marginLeft="@dimen/dp_60"
            android:layout_centerVertical="true"
            android:textColor="#999999"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_12"
            android:hint="请输入病症名称或标题关键字"
            android:background="#CFCFCF"
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_26"/>
        <TextView
            android:id="@+id/shou"
            android:textSize="@dimen/sp_16"
            android:textColor="#3087ea"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:text="搜索"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10" />
    <RelativeLayout
        android:visibility="gone"
        android:background="#ffffff"
        android:id="@+id/im_no"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10">
        <ImageView
            android:layout_marginTop="@dimen/dp_140"
            android:layout_centerHorizontal="true"
            android:src="@drawable/no_search_message"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"/>
        <TextView
            android:textColor="#000000"
            android:text="抱歉！没有找到相关病友圈"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_340"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>